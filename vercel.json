{
  "version": 2,
  "buildCommand": "npm install && cd client && npm install && npm run build && cd ../server && npm install && npm run build",
  "installCommand": "npm install",
  "outputDirectory": "client/dist",
  "builds": [
    {
      "src": "server/src/vercel.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/src/vercel.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ]
}
